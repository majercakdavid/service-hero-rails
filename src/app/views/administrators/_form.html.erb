<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@administrator) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.fields_for :user do |u| %>
            <%= u.label :email %><br/>
            <%= u.email_field :email, autofocus: true, class: 'form-control' %>

            <%= u.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
            <%= u.password_field :password, autocomplete: "off", class: 'form-control' %>
            <% if @minimum_password_length %>
                <br/>
                <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>

            <%= u.label :password_confirmation %><br/>
            <%= u.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        <% end %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.submit (f.object.new_record? ? 'Create my account' : 'Save changes'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
